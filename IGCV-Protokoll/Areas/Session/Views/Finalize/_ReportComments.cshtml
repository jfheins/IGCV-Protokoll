@using IGCV_Protokoll.Models
@using IGCV_Protokoll.util
@model IEnumerable<IGCV_Protokoll.Models.Comment>

@if (Model.Any())
{
	<div class="panel-body">
		@foreach (Comment comment in Model)
		{
			<div class="comment-panel-group">
				<p class="comment-author" title="@comment.Created.ToString("F")">@comment.Author</p>
				<p class="comment-content">@Html.DisplayWithLinksFor(model => comment.Content, "String_Multiline")</p>
			</div>
		}
	</div>
}